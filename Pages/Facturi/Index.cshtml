@page
@model ProiectRetele.Pages.Facturi.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Gestionarea Facturilor</h1>

<p>
    <a asp-page="Create">Adauga o noua inregistrare</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Factura[0].Serviciu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Factura[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Factura[0].Programare.Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Factura) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Serviciu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                    @if (item.Programare != null)
                    {
                        @Html.DisplayFor(modelItem => item.Programare.Data)
                    }
                    else
                    {
                        <span>No Programare</span>
                    }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalii</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
